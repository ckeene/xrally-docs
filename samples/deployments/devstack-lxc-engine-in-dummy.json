{
    "type": "MultihostEngine",
    "controller": {
        "name": "DevstackEngine",
        "localrc": {
            "MULTI_HOST": "1",
            "VIRT_DRIVER": "fake",
            "API_RATE_LIMIT": "False",
            "ENABLED_SERVICES+": ",-n-cpu",
            "SCREEN_LOGDIR": "$DEST/logs/screen"
        },
        "provider": {
            "name": "LxcProvider",
            "containers_per_host": 1,
            "container_name_prefix": "controller",
            "distribution": "ubuntu",
            "host_provider": {
                "name": "DummyProvider",
                "credentials": [{"user": "root", "host": "localhost"}]
            }
        }
    },
    "nodes": [
        {
            "name": "LxcEngine",
            "distribution": "ubuntu",
            "container_name": "devstack-compute",
            "nodes_per_server": 64,
            "provider": {
                "name": "DummyProvider",
                "credentials": [{"user": "root", "host": "localhost"}]
            },
            "engine": {
                "name": "DevstackEngine",
                "localrc": {
                    "VIRT_DRIVER": "fake",
                    "DATABASE_TYPE": "mysql",
                    "MYSQL_HOST": "{controller_ip}",
                    "RABBIT_HOST": "{controller_ip}",
                    "GLANCE_HOSTPORT": "{controller_ip}:9292",
                    "API_RATE_LIMIT": "False",
                    "ENABLED_SERVICES": "n-cpu,n-net",
                    "SCREEN_LOGDIR": "$DEST/logs/screen"
                }
            }
        }
    ]
}
